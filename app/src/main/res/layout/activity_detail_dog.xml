<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailDog">

    <ImageView
        android:id="@+id/imgDog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        android:src="@drawable/ic_dog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBreeds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcesanspro_regular_400"
        android:text="Breeds:"
        android:textColor="@color/brown"
        android:textSize="@dimen/_16sp"
        app:layout_constraintStart_toStartOf="@id/imgDog"
        app:layout_constraintTop_toBottomOf="@id/imgDog" />

    <TextView
        android:id="@+id/txtHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:fontFamily="@font/sourcesanspro_regular_400"
        android:text="Height:"
        android:textColor="@color/brown"
        android:textSize="@dimen/_16sp"
        app:layout_constraintStart_toStartOf="@id/txtBreeds"
        app:layout_constraintTop_toBottomOf="@id/txtBreeds" />

    <TextView
        android:id="@+id/txtWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:fontFamily="@font/sourcesanspro_regular_400"
        android:text="Width:"
        android:textColor="@color/brown"
        android:textSize="@dimen/_16sp"
        app:layout_constraintStart_toStartOf="@id/txtHeight"
        app:layout_constraintTop_toBottomOf="@id/txtHeight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcesanspro_regular_400"
        android:text="Panggil data breeds"
        android:textColor="@color/brown"
        android:textSize="@dimen/_16sp"
        app:layout_constraintTop_toTopOf="@id/txtBreeds"
        app:layout_constraintStart_toEndOf="@id/txtBreeds"
        android:layout_marginStart="@dimen/_5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcesanspro_regular_400"
        android:text="Panggil data height"
        android:textColor="@color/brown"
        android:textSize="@dimen/_16sp"
        app:layout_constraintTop_toTopOf="@id/txtHeight"
        app:layout_constraintStart_toEndOf="@id/txtHeight"
        android:layout_marginStart="@dimen/_5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcesanspro_regular_400"
        android:text="Panggil data width"
        android:textColor="@color/brown"
        android:textSize="@dimen/_16sp"
        app:layout_constraintTop_toTopOf="@id/txtWidth"
        app:layout_constraintStart_toEndOf="@id/txtWidth"
        android:layout_marginStart="@dimen/_5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>